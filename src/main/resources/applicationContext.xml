<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <alias name="defaultChessBoardService" alias="friendlyChessBoardService"/>
    <bean id="defaultChessBoardService" class="com.davidbalazs.chess.service.impl.DefaultFriendlyChessBoardService">
    </bean>

    <alias name="defaultMoveGenerator" alias="moveGenerator"/>
    <bean id="defaultMoveGenerator" class="com.davidbalazs.chess.movegenerator.impl.DefaultMoveGenerator">
        <property name="moveGenerators">
            <list>
                <ref bean="whitePawnMoveGenerator"/>
            </list>
        </property>
    </bean>

    <bean id="whitePawnMoveGenerator" class="com.davidbalazs.chess.movegenerator.impl.WhitePawnMoveGenerator"/>


</beans>